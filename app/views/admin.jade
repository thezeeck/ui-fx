doctype html
html
  include ../jade/head.jade
  body
    div
      include ../jade/header.jade
      section#adminProfile.content-area
        h1 Profile
        form.form-responsive
          ul.col.no-border
            li
              label First Name
              input(type="text" value="Antonio")
            li
              label Last Name
              input(type="text" value="Campa")
            li
              label e-Mail
              input(type="email" value="antonio.campa@example.com")
            li
              label Title
              select
                option(disabled selceted) Select one
                option Ms.
                option Mrs.
                option Dr.
                option Mr.
            li
              label Password
              input(type="password" value="123456789")
            li
              button#passwordChange Change password
            li.hidden-password
              label New Password
              input(type="password" placeholder="******")
            li.hidden-password
              label Confirm password
              input(type="password" placeholder="******")
            li.col-container
              h2.col.no-border Notifications
              dl.col.no-border.config-alert
                dt CPU Alert
                dd
                  input(id="slider" class="balSlider" value="0" title="slider")
                dt Memory Alert
                dd
                  input(id="slider2" class="balSlider" value="0" title="slider")
          .button-area.col.no-border
            button.primary Save
    script(type="text/javascript" src="js/app.js")
    script.
      $(()=> {
        adminForm();
        sliderContructor($('#slider'));
        sliderContructor($('#slider2'));
      });
      
